<% content_for(:title, "Pokemon Tracker") %>

<div class="page-header">
	<h4>Pokemon:</h4>
</div>

<ul>
	<li><%= @animal.name %></li>
</ul>

<a href="/animals/<%= @animal.id %>/edit">Edit Pokemon</a> | 
<a href="/animals/<%= @animal.id %>"
	 data-confirm="You sure?"
   data-method="delete"
   rel="nofollow">Delete Pokemon</a>

<div class="page-header">
	<h4>Trainer:</h4>
</div>

<ul>
	<% @animal.trainers.each do |trainer| %>
	<li><%= trainer.name + " | " + "Master Status: " + (trainer.masters.last.status).to_s %></li>
	<% end %>
</ul>



