<form action="/masters" method="post">
<div class="page-header">
  <h4>Trainer:</h4>
</div> 

 <div class="form-group">
    <label for="trainer_name">Trainer:</label>
    <select name="master[trainer_id]">
       <% Trainer.all.each do |trainer| %>
            <option value="<%= trainer.id %>" selected><%= trainer.id %> | <%= trainer.name %></option>
       <% end %>
    </select>
  </div>


<div class="page-header">
  <h4>Pokemon:</h4>
</div> 

 <div class="form-group">
    <label for="animal_name">Pokemon:</label>
    <select name="master[animal_id]">
       <% Animal.all.each do |animal| %>
            <option value="<%= animal.id %>" selected><%= animal.id %> | <%= animal.name %></option>
       <% end %>
    </select>
  </div>

<div class="page-header">
  <h4>Master Status</h4>
</div> 

 <div class="form-group">
    <label for="master_status">Pokemon:</label>
    <select name="master[status]">
            <option value="true" selected>Yes</option>
            <option value="false" selected>No</option>
    </select>
  </div>
  <button>Gotta Catch Em All!</button>
</form>